#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int palRec(char *palavra, int tamanho){


int n=0;
	if(tamanho == 1){
		return 1;
	} else {
		if (strcmp(palavra[n],palavra[tamanho-1]))
			return palRec(palavra[n+1] , palavra[tamanho-1]);
	}
	return 0;
}



int main(void) {

	setbuf(stdout, NULL);

	printf("%d", palRec("arara", 5));

	return EXIT_SUCCESS;
}
