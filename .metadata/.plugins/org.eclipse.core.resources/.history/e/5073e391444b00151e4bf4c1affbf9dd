#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int palRec(char xubango[], int tamanho, int pos){
	if(tamanho == 1){
		return 1;
	}
	return 0;
}

int main(void) {
		char xubango['arara'];
		int pos = 0;
		setbuf(stdout, NULL);
		printf("%d", palRec(xubango, strlen(xubango), pos));
		return EXIT_SUCCESS;
}
