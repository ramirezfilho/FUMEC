#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int palRec(char *palavra, int tamanho){
	if(tamanho == 1){
		return 1;
	} else if return (palavra[0] == palavra[tamanho-1]){
			tamanho =-1;
		}
	}

}



int main(void) {

	setbuf(stdout, NULL);

	printf("%d", palRec('arara', 5));

	return EXIT_SUCCESS;
}
