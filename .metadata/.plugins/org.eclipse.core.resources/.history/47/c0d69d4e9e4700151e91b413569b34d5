#include <stdio.h>
#include <stdlib.h>


int expoente(int x, int y){
	if(y == 0){
		return 1;
	} else if (y == 1){
		return x;
	}
}


int main(void) {

	setbuf(stdout, NULL);

	printf("%d", expoente(3,0));

	return EXIT_SUCCESS;
}
