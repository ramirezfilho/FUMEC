#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int palRec(char *xubango, int tam, int pos){
	if(tam == 1){
		return 1;
	}
	if(xubango = xubango)
		pos++;
		return palRec(xubango++, tam++, pos);
	return 0;
}

int main(void) {
		char xubango['arara'];
		char *pointer[100];
		int pos = 0;
		setbuf(stdout, NULL);
		printf("%d", palRec(xubango, strlen(xubango), pos));
		return EXIT_SUCCESS;
}
