#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int palRec(char xubango[5], int tamanho){
	if(tamanho == 1){
		return 1;
	} else {
		int n = 0;
		if ( xubango[n] = xubango[tamanho-1] ){
			n++;
			return palRec(xubango[n+1], tamanho-1);
		}

	}
	return 0;
}

int main(void) {
		char xubango['arara'];
		setbuf(stdout, NULL);
		printf("%d", palRec(xubango, 5));
		return EXIT_SUCCESS;
}
