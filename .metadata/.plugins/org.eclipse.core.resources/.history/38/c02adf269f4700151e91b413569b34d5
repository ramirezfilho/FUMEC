#include <stdio.h>
#include <stdlib.h>


int expoente(int x, int y){
	if(y == 0){
		return 1;
	} else if (y == 1){
		return x;
	}
	return x * expoente(x, y-1);
}


int main(void) {

	setbuf(stdout, NULL);

	printf("%d", expoente(2,1));

	return EXIT_SUCCESS;
}
